<div class="container">
	<% if (typeof messages != 'undefined'){ %>
		<% if (messages.success){ %>
			<% for (i in messages.success){  %>
				<div class="alert alert-success"><%= messages.success[i] %></div>
			<% } %>
		<% } %>

		<% if (messages.info){ %>
			<% for (i in messages.info){  %>
				<div class="alert alert-info"><%= messages.info[i] %></div>
			<% } %>
		<% } %>

		<% if (messages.error){ %>
			<% for (i in messages.error){  %>
				<div class="alert alert-danger"><%= messages.error[i] %></div>
			<% } %>
		<% } %>
	<% } %>
</div>