  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Your Site</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="css/site.css">
  </head>
  <body ng-cloak ng-app="app">
	<div class="container" ng-controller="RegisterCtl">
        <h2>Register</h2>
        <form name="form" ng-init="origUser=user" method="POST" action="/register">
            <% if(typeof error !== 'undefined' && error){ %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <div class="form-group">
              <input ng-model="user.email" required type="email" placeholder="email" class="form-control">
            </div>

            <div class="form-group">
              <input ng-model="user.password" required type="password" placeholder="password" class="form-control">
            </div>
            <button ng-disabled="form.$invalid || user == origUser" class="btn btn-primary" ng-click="ok()">OK</button>
        </form>
    </div>

    <!--[if lt IE 9]>
    <script src="js/ie.js"></script>
    <![endif]-->

    <script src="js/vendor.js"></script>
    <script src="js/site.js"></script>
    <script>require('front/js/auth')</script>
</body>
</html>
